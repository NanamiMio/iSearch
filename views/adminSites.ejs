<% include header.ejs %>

<script src="/javascripts/adminSites.js"></script>
  <div class="container">
    <div class="page-header">
       <h1>
          Sites
       </h1>
    </div>
    <div class="table-responsive">
    <table class="table table-striped">
      <tr>
        <th> ID </th>
        <th> Name </th>
        <th> Class </th>
        <th> Url </th>
        <th> PV </th>
        <th>  </th>
      </tr>
    <% if (sites.length) { %>
      <% sites.forEach(function(site){ %>
        <tr id=<%= site._id %> >
          <td> <%= site._id %> </td>
          <td> <%= site.name %> </td>
          <td> <%= site.class %> </td>
          <td> <%= site.url %> </td>
          <td> <%= site.pageView %> </td>
          <td>
            <a class="btn btn-info" href=<%= '/admin/editSite/'+site.id %> role="button">Edit</a>
            <a class="btn btn-danger" href="javascript:void(0);" onclick="siteDelete('<%= site._id %>');">Delete</a>
          </td>
        </div>
        <% }) %>
          <% } %>
    </table>
  </div>
            <% include footer.ejs %>
