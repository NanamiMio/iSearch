<% include header.ejs %>


  <div class="container">
    <div class="jumbotron">
    <h1 class="text-center"><%= title %></h1>
    <p class="text-center">Find what you want</p>
    <form id="searchFrom" action="/search" method="get">
      <div class="input-group">
        <input id="searchKey" name="name" type="text" class="form-control input-lg" placeholder="Search for...">
        <span class="input-group-btn">
            <button id="search" class="btn btn-lg btn-default" type="submit">Search</button>
        </span>
      </div>
    </form>
    <div class="text-center">
    <% if (classes.length) { %>
          <% classes.forEach(function(clas){ %>
    <a class="btn btn-primary" href= '/search?class=<%= clas.name %>' role="button"> <%= clas.name %> </a>
            <% }) %>
         <% } %>
</div>
  </div>
  </div>

  <% include footer.ejs %>
